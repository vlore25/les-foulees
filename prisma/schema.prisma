generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

/**
 * ==============USERS=================
 */
enum Role {
  ADMIN
  USER
}

enum Status {
  ACTIVE
  INACTIVE
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique @db.VarChar(255)
  name              String
  lastname          String
  birthdate         DateTime?
  phone             String?
  password          String
  adress            String
  zipCode           String
  city              String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  role              Role      @default(USER)
  status            Status    @default(ACTIVE)
  emergencyName     String?
  emergencyLastName String?
  emergencyPhone    String?
  sessions          Session[]
  events            Event[]
  payments          Payment[]
  licenses          License[]
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Invitation {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  email     String   @unique
  createdAt DateTime @default(now())
}

/**
 * ==============EVENTS=================
 */

enum Visibility {
  PRIVATE
  PUBLIC
}

enum EventType {
  TRAIL
  COURSE_ROUTE
  ENTRAINEMENT
  VIE_DU_CLUB
  SORTIE
  AUTRE
}

model Event {
  id           String     @id @default(cuid())
  title        String
  imgUrl       String
  description  String?
  dateStart    DateTime?
  dateEnd      DateTime?
  location     String
  type         EventType
  visibility   Visibility @default(PUBLIC)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  participants User[]
  payments     Payment[]
}

/**
 * ==============DOCS=================
 */

model LegalDocs {
  id          String  @id @default(cuid())
  title       String?
  description String?
  Url         String?
}

/**
 * ==============SEASONS=================
 */
model Season {
  id            String    @id @default(cuid())
  name          String    @unique // ex: "2025-2026"
  startDate     DateTime
  endDate       DateTime
  isActive      Boolean   @default(false)
  priceStandard Float     @default(35.0)
  priceCouple   Float     @default(60.0)
  priceYoung    Float     @default(25.0)
  priceFfa      Float     @default(98.0)
  licenses      License[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// ==============DOSSIER ADHERANT=================

enum LicenseType {
  STANDARD
  COUPLE
  YOUNG
  FFA
}

model License {
  id            String      @id @default(cuid())
  type          LicenseType @default(STANDARD)
  licenseNumber String?
  isValid       Boolean     @default(false)
  userId        String
  user          User        @relation(fields: [userId], references: [id])
  seasonId      String
  season        Season      @relation(fields: [seasonId], references: [id])
  payments      Payment[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@unique([userId, seasonId])
}

/**
 * ==============CENTRALISED ALL PAYEMENTS=================
 */

enum PaymentMethod {
  CHEQUE
  VIREMENT
  ESPECES
  STRIPE
  AUTRE
}

model Payment {
  id        String        @id @default(cuid())
  amount    Float
  date      DateTime      @default(now())
  method    PaymentMethod
  reference String?
  userId    String
  user      User          @relation(fields: [userId], references: [id])
  licenseId String?
  license   License?      @relation(fields: [licenseId], references: [id])
  eventId   String?
  event     Event?        @relation(fields: [eventId], references: [id])
}
