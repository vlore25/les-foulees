generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  USER
}

enum Status {
  ACTIVE
  INACTIVE
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique @db.VarChar(255)
  name      String
  lastname  String
  birthdate DateTime?
  phone     String?
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  role      Role      @default(USER)
  status    Status    @default(ACTIVE)
  sessions  Session[]
  events    Event[]
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Invitation {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  email     String   @unique
  createdAt DateTime @default(now())
}

enum Visibility {
  PRIVATE
  PUBLIC
}

enum EventType {
  TRAIL
  COURSE_ROUTE
  ENTRAINEMENT
  VIE_DU_CLUB
  SORTIE
  AUTRE
}

model Event {
  id           String     @id @default(cuid())
  title        String
  imgUrl       String
  description  String?
  dateStart    DateTime?
  dateEnd      DateTime?
  location     String
  type         EventType
  visibility   Visibility @default(PUBLIC)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  participants User[]
}

model LegalDocs {
  id          String  @id @default(cuid())
  title       String?
  description String?
  Url         String?
}
