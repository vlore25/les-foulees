generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

/**
 * ==============USERS=================
 */
enum Role {
  ADMIN
  USER
}

enum Status {
  ACTIVE
  INACTIVE
}

model User {
  id                 String       @id @default(cuid())
  email              String       @unique @db.VarChar(255)
  // --- Infos Personnelles ---
  name               String
  lastname           String
  birthdate          DateTime?
  phone              String?
  password           String
  address            String
  zipCode            String
  city               String
  // Contact Urgence
  emergencyName      String?
  emergencyLastName  String?
  emergencyPhone     String?
  showPhoneDirectory Boolean      @default(false)
  showEmailDirectory Boolean      @default(false)
  role               Role         @default(USER)
  status             Status       @default(ACTIVE)
  sessions           Session[]
  events             Event[]
  memberships        Membership[]
  payments           Payment[]
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Invitation {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  email     String   @unique
  createdAt DateTime @default(now())
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@unique([email, token])
}

/**
 * ==============EVENTS=================
 */

enum Visibility {
  PRIVATE
  PUBLIC
}

enum EventType {
  TRAIL
  COURSE_ROUTE
  ENTRAINEMENT
  VIE_DU_CLUB
  SORTIE
  AUTRE
}

model Event {
  id           String     @id @default(cuid())
  title        String
  imgUrl       String
  description  String?
  dateStart    DateTime?
  dateEnd      DateTime?
  location     String
  type         EventType
  visibility   Visibility @default(PUBLIC)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  participants User[]
}

// ==============DOCS=================

model LegalDocs {
  id          String  @id @default(cuid())
  title       String?
  description String?
  Url         String?
}

// ==============SEASON=================

model Season {
  id            String       @id @default(cuid())
  name          String       @unique
  startDate     DateTime
  endDate       DateTime
  isActive      Boolean      @default(false)
  priceStandard Float        @default(35.0)
  priceCouple   Float        @default(60.0)
  priceYoung    Float        @default(25.0)
  priceFfa      Float        @default(98.0)
  memberships   Membership[]
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

// ==============DOSSIER ADHERANT=================

enum MembershipStatus {
  PENDING
  VALIDATED
  REJECTED
}

enum MembershipType {
  INDIVIDUAL
  COUPLE
  YOUNG
  LICENSE_RUNNING
}

model Membership {
  id               String           @id @default(cuid())
  user             User             @relation(fields: [userId], references: [id])
  userId           String
  season           Season           @relation(fields: [seasonId], references: [id])
  seasonId         String
  ffaLicenseNumber String?
  previousClub     String?
  certificateUrl   String?
  status           MembershipStatus @default(PENDING)
  type             MembershipType   @default(INDIVIDUAL)
  paymentId        String?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  payment          Payment?         @relation(fields: [paymentId], references: [id])

  @@unique([userId, seasonId])
}

// ==============CENTRALISED ALL PAYEMENTS=================

enum PaymentMethod {
  CHECK
  TRANSFER
  CASH
  ONLINE
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
}

model Payment {
  id           String        @id @default(cuid())
  amount       Float
  method       PaymentMethod
  status       PaymentStatus @default(PENDING)
  reference    String?
  date         DateTime      @default(now())
  user         User          @relation(fields: [userId], references: [id])
  userId       String
  memberships  Membership[]
  membershipId String        @unique
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}
